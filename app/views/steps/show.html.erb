<div class="container py-5">
  <h1 class="text-center mb-4 text-primary"><%= @step.title %></h1>

  <p class="text-center mb-4">
    <strong>Description:</strong> <%= @step.description %>
  </p>

  <div class="text-center">
    <%= link_to 'Edit', edit_goal_step_path(@goal, @step), class: 'btn btn-warning px-4 me-2' %>
    <%= link_to 'Delete', goal_step_path(@goal, @step), method: :delete, data: { confirm: 'Are you sure you want to delete this step?' }, class: 'btn btn-danger px-4 me-2' %>
    <%= link_to 'Back to goal', goal_path(@goal), class: 'btn btn-secondary px-4' %>
  </div>
</div>
