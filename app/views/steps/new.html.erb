<div class="container py-5">
  <h1 class="text-center mb-4 text-primary">New Step for "<%= @goal.title %>"</h1>

  <div class="table-container mx-auto" style="max-width: 500px;">
    <%= form_with model: @step, url: goal_steps_path(@goal), local: true do |form| %>
      <div class="form-group mb-3">
        <%= form.label :title, 'Title', class: 'form-label text-primary' %>
        <%= form.text_field :title, class: 'form-control border-primary shadow-sm', style: 'height: 36px; font-size: 14px;' %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :description, 'Description', class: 'form-label text-primary' %>
        <%= form.text_area :description, class: 'form-control border-primary shadow-sm', style: 'height: 80px; font-size: 14px;' %>
      </div>

      <div class="text-center">
        <%= form.submit 'Create', class: 'btn btn-primary px-4 me-2' %>
        <%= link_to 'Back to goal', goal_path(@goal), class: 'btn btn-secondary px-4' %>
      </div>
    <% end %>
  </div>
</div>
