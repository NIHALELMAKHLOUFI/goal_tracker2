<div class="container py-5">
  <h1 class="text-center mb-4 text-primary">Goals List</h1>

  <div class="text-center">
    <%= link_to 'New Goal', new_goal_path, class: 'btn btn-primary mb-3' %>
  </div>

  <div class="mx-auto" style="width: 50%;">
    <table class="table table-bordered table-hover">
      <thead class="bg-primary text-white">
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @goals.each do |goal| %>
          <tr>
            <td><%= goal.title %></td>
            <td>
              <%= link_to 'View', goal_path(goal), class: 'btn btn-info btn-sm' %>
              <%= link_to 'Edit', edit_goal_path(goal), class: 'btn btn-warning btn-sm' %>
              <%= link_to 'Delete', goal_path(goal), method: :delete, data: { confirm: 'Are you sure you want to delete this goal?' }, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
