<div class="container py-5">
  <h1 class="text-center mb-4 text-primary"><%= @goal.title %></h1>

  <div class="text-center mb-4">
    <%= link_to 'Edit', edit_goal_path(@goal), class: 'btn btn-warning px-4 me-2' %>
    <%= link_to 'Delete', goal_path(@goal), method: :delete, data: { confirm: 'Are you sure you want to delete this goal?' }, class: 'btn btn-danger px-4 me-2' %>
    <%= link_to 'Back to the list', goals_path, class: 'btn btn-secondary px-4' %>
  </div>

  <h2 class="text-center mb-4 text-primary">Steps</h2>

  <div class="text-center mb-4">
    <%= link_to 'Add a Step', new_goal_step_path(@goal), class: 'btn btn-primary mb-3' %>
  </div>

  <div class="mx-auto" style="width: 50%;">
    <table class="table table-bordered table-hover">
      <thead class="bg-primary text-white">
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @steps.each do |step| %>
          <tr>
            <td><%= step.title %></td>
            <td>
              <%= link_to 'View', goal_step_path(@goal, step), class: 'btn btn-info btn-sm' %>
              <%= link_to 'Edit', edit_goal_step_path(@goal, step), class: 'btn btn-warning btn-sm' %>
              <%= link_to 'Delete', goal_step_path(@goal, step), method: :delete, data: { confirm: 'Are you sure you want to delete this step?' }, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
